<mvc:View
    controllerName="Leav.controller.table"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
   <Table
        id = "emp"
		class="sapUiResponsiveMargin"
		width="auto"
        growing="true"
		items="{/data}">
        <headerToolbar>
        </headerToolbar>
        	<columns>
			<Column
                id="namecol"
				width="8em">
				<Label text="Employee Name" id="_name"/>
			</Column>
            <Column
                id="startdatecol"
				width="8em">
				<Label text="Start Date" id="_startdate"/>
			</Column>
            <Column
                id="enddatecol"
				width="8em">
				<Label text="End Date" id="_enddate"/>
			</Column>
             <Column
                id="emailcol"
				width="8em">
				<Label text="Email ID" id="_email"/>
			</Column>
            </columns>
            <items>
                <ColumnListItem id="itemlist">
                    <cells>
                       <Text text="{name}" id="name"></Text>
                       <Text text="{startDate}" id="startDate"></Text>
                       <Text text="{endDate}" id="endDate"></Text>
                       <Text text="{email}" id="email"></Text>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
</mvc:View>